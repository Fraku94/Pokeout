<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:minHeight="@dimen/list_item_height"
        android:background="@color/white"
        android:id="@+id/Gointo">

    </RelativeLayout>

    <ImageView
        android:id="@+id/suggestImage"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/suggestImage"
        android:paddingLeft="10dp"
        android:paddingTop="14dp"
        tools:background="@color/white"
        android:weightSum="2">

        <TextView
            android:id="@+id/suggestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:hint="@string/CategoryName"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/bestCountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="40px"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/suggestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:hint="@string/Count" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="80px"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/suggestFollow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@color/orange"
            app:btn_color="@color/orange"
            app:btn_fill_color="@color/orange"
            app:allow_random_color="true"
            app:enable_flashing="true"
            app:big_shine_color="@color/orange"
            app:click_animation_duration="200"
            app:shine_animation_duration="1500"
            app:shine_turn_angle="10"
            app:small_shine_offset_angle="20"
            app:small_shine_color="@color/orange"
            app:shine_count="8"
            app:siShape="@raw/unlike"/>

    </LinearLayout>

</RelativeLayout>
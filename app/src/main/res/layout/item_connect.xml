<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:minHeight="@dimen/list_item_height"
        android:background="@color/white"
        android:id="@+id/Gointo">

    </RelativeLayout>




    <ImageView
        android:id="@+id/Image"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"

        />


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/Image"
        android:paddingLeft="10dp"
        android:paddingTop="14dp"
        tools:background="@color/white"
        android:weightSum="2">

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Name"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceListItemSmall"
            android:textColor="@android:color/black"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="80px"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <!--<ImageView-->

        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_marginBottom="40px"-->
        <!--android:layout_height="24dp"-->
        <!--android:src="@drawable/unffalow" />-->

        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@color/orange"
            android:id="@+id/Delete"
            app:btn_color="@color/orange"
            app:btn_fill_color="@color/orange"
            app:allow_random_color="false"
            app:siShape="@raw/delete"/>

        <!--<ImageView-->
        <!--android:id="@+id/likedFollow"-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:src="@drawable/like2"/>-->


    </LinearLayout>

</RelativeLayout>
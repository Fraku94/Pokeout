<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_default"
        android:id="@+id/bestImage"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Best name"
                android:textAlignment="center"
                android:textSize="45dp"
                android:id="@+id/bestName"/>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/bestCount"
                android:src="@mipmap/ic_grup" />

            <TextView
                android:text="@string/Count"
                android:id="@+id/bestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/imageView"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/bestFollow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_add_grup" />

            <ImageView
                android:id="@+id/bestGo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/bestFollow"
                android:src="@mipmap/ic_go" />

        </RelativeLayout>


    </FrameLayout>


</FrameLayout>
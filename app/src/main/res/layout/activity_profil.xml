<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/About"
    android:layout_below="@id/imageProfil">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left">
        <TextView

            android:text="About me"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5pt"
            android:paddingLeft="10pt"

            android:textSize="15dp"
            android:textColor="@color/orange"
            android:textAlignment="center"


            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="25dp">
        <TextView
            android:id="@+id/cityProfil"
            android:text="City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5pt"
            android:paddingLeft="10pt"

            android:textSize="15dp"
            android:textColor="@color/orange"
            android:textAlignment="center"
            android:layout_below="@id/imageProfil"

            />
    </LinearLayout>



</LinearLayout>





            <EditText
                android:id="@+id/descriptionProfil"
                android:paddingTop="5pt"
                android:layout_width="wrap_content"
                android:layout_height="230px"
                android:layout_below="@id/About"
                android:paddingLeft="10pt"
                android:text="About me"
                android:textAlignment="center"
                android:textColor="@color/black" />


            <LinearLayout
                android:id="@+id/namel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_below="@id/descriptionProfil"

                >


                <TextView
                    android:text="Name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/nameProfil"
                    android:text="Name"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/phonel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_below="@id/namel"
                >

                <TextView
                    android:text="Phone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:textAlignment="center" />



                <EditText
                    android:id="@+id/phoneProfil"
                    android:text="@string/Phone"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center" />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/datel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/phonel"
                android:layout_weight="3"
                >


                <TextView
                    android:text="Date Birth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/brithProfil"

                    android:text="Date Birth"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center" />

            </LinearLayout>





            <LinearLayout
android:id="@+id/sexl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_below="@id/datel"
                >


                <TextView
                    android:text="Gender"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/sexUserDescryption"
                    android:text="Gender"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_below="@id/sexl"
                >


                <Button
                    android:id="@+id/confirmProfil"
                    android:hint="@string/Sex"
                    android:layout_margin="10dp"
                    android:layout_height="100px"
                    android:layout_width="250px"
                    android:text="Confirm"
                    android:background="@drawable/shapebuttonprofile"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/backProfil"
                    android:hint="@string/Sex"
                    android:layout_margin="10dp"
                    android:layout_height="100px"
                    android:layout_width="250px"
                    android:text="Back"
                    android:background="@drawable/shapebuttonprofile"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_below="@id/buttonl"
                >


                <TextView
                    android:hint="@string/Sex"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Radius"

                    android:textSize="15dp"

                    android:textAlignment="center"
                    android:textColor="@color/orange"/>

                <SeekBar
                    android:id="@+id/radiusseekBarProfil"
                    android:layout_marginRight="30pt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/orange"
                    />

                <TextView
                    android:id="@+id/radiusProfil"
                    android:hint="@string/Sex"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Radius"

                    android:textSize="15dp"

                    android:textAlignment="center"
                    android:textColor="@color/orange"/>
            </LinearLayout>






        </RelativeLayout>




    </ScrollView>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/white">






    <ImageView
        android:id="@+id/bestImage"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"

     />


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"

        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/bestImage"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        tools:background="@color/white"
        android:weightSum="2">

        <TextView
            android:id="@+id/bestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Best Category"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceListItemSmall"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/bestCountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="40px"
                android:src="@drawable/group" />


            <TextView
                android:id="@+id/bestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="@android:color/black"
                tools:text="one" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingRight="80px"
        android:layout_alignParentRight="true"
         android:weightSum="2"
        android:orientation="vertical">

        <!--<ImageView-->

            <!--android:id="@+id/imageView"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_marginBottom="40px"-->
            <!--android:layout_height="24dp"-->
            <!--android:src="@drawable/unffalow" />-->



        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/bestFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like"/>

        <ImageView
            android:layout_weight="0.5"
            android:id="@+id/bestGo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/next" />
    </LinearLayout>

</RelativeLayout>
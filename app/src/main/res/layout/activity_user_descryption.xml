    <TextView
        android:id="@+id/About"
        android:text="About me"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5pt"
        android:paddingLeft="10pt"
        android:textSize="15dp"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:layout_below="@id/imageUserDescryption"

        />



        <TextView
            android:id="@+id/descriptionUserDescryption"
            android:paddingTop="5pt"
            android:layout_width="wrap_content"
            android:layout_height="230px"
            android:layout_below="@id/About"
            android:paddingLeft="10pt"
            android:text="About me"
            android:textAlignment="center"
            android:textColor="@color/black" />


    <LinearLayout
        android:id="@+id/namel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_below="@id/descriptionUserDescryption"
        >


        <TextView
            android:text="Name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/nameUserDescryption"
            android:text="Name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/phonel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_below="@id/namel"
        >

        <TextView
        android:text="Phone"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
            android:textColor="@color/orange"
        android:textAlignment="center" />



        <TextView
            android:id="@+id/phoneUserDescryption"
            android:text="@string/Phone"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAlignment="center" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/datel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/phonel"
        android:layout_weight="3"
        >


        <TextView
            android:text="Date Birth"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/brithUserDescryption"

            android:text="Date Birth"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAlignment="center" />

    </LinearLayout>





    <LinearLayout
        android:id="@+id/datel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_below="@id/datel"
        >


        <TextView
            android:text="Gender"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/orange"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/sexUserDescryption"
            android:text="Gender"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/datel1">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </RelativeLayout>




</ScrollView>






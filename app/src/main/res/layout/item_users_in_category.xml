<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="25dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_default"
        android:id="@+id/usersInCategoryImage"/>
    <LinearLayout
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/User_Name"
            android:layout_gravity="center"
            android:id="@+id/usersInCategoryName"/>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_add_user"
        android:id="@+id/usersInCategoryfollow"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@id/usersInCategoryfollow"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_message"
        android:id="@+id/usersInCategoryMessage"/>
</RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/list_item_height"
    android:background="@color/white">






    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"

        />


    <LinearLayout
        android:id="@+id/text_container"
        android:gravity="fill"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/categoryImage"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        tools:background="@color/white"


        >

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:gravity="center"
            tools:text="Best Category"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceListItemSmall"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <ImageView

                android:id="@+id/bestCountIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="40px"
                android:layout_toRightOf="@+id/bestImage"
                android:src="@drawable/group" />


            <TextView
                android:id="@+id/categoryCount"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="@android:color/black"
                tools:text="one" />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>